<Window x:Class="YukarinetteToTwitchChat.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YukarinetteToTwitchChat"
        mc:Ignorable="d"
        Title="SettingWindow" Width="300" Height="200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Twitchユーザー："/>
                <TextBlock Name="AccountStatus" Text="ログインしていません"/>
            </StackPanel>
            <Button Name="LoginButton" Content="Twitchログイン" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10" Click="LoginButton_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
